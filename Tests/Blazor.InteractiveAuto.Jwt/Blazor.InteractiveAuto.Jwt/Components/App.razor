<!DOCTYPE html>
<html lang="en">

    @Intent.Merge    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <base href="/" />

        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
        <link rel="stylesheet" href="_content/MudBlazor/MudBlazor.min.css" />

        <link rel="stylesheet" href="app.css" />
        <link rel="stylesheet" href="Blazor.InteractiveAuto.Jwt.styles.css" />
        <link rel="icon" type="image/png" href="favicon.png" />
        <HeadOutlet @rendermode="GetRenderModeForPage()" />
    </head>

    <body>
        <Routes @rendermode="GetRenderModeForPage()" />
        <script src="_framework/blazor.web.js"></script>
        <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    </body>

</html>
@code {

    [CascadingParameter]
    public HttpContext HttpContext { get; set; } = default!;

    public IComponentRenderMode? GetRenderModeForPage()
    {
        if (HttpContext.Request.Path.StartsWithSegments("/Account"))
        {
            return null;
        }
        return InteractiveAuto;
    }
}