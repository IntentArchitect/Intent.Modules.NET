{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security.Bearer": {
    "Authority": "https://localhost:{sts_port}",
    "Audience": "api"
  },
  "HttpClients": {
    "TestVersionedProxy": {
      "Uri": "https://localhost:{app_port}/",
      "IdentityClientKey": "default",
      "Timeout": "00:01:00"
    },
    "TestUnversionedProxy": {
      "Uri": "https://localhost:{app_port}/",
      "IdentityClientKey": "default",
      "Timeout": "00:01:00"
    },
    "SecureServicesService": {
      "Uri": "https://localhost:{app_port}/",
      "IdentityClientKey": "default",
      "Timeout": "00:01:00"
    }
  },
  "IdentityClients": {
    "default": {
      "Address": "https://localhost:{sts_port}/connect/token",
      "ClientId": "clientId",
      "ClientSecret": "secret",
      "Scope": "api"
    }
  },
  "CorsPolicies": {
    "Default": {
      "Origins": [
        "*"
      ],
      "Methods": [
        "*"
      ],
      "Headers": [
        "*"
      ]
    }
  },
  "MassTransit": {
    "RetryInterval": {
      "RetryCount": 10,
      "Interval": "00:00:05"
    }
  }
}