{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security.Bearer": {
    "Authority": "https://localhost:{sts_port}",
    "Audience": "api"
  },
  "HttpClients": {
    "CustomersService": {
      "Uri": "https://localhost:{app_port}/",
      "Timeout": "00:01:00"
    },
    "ProductsService": {
      "Uri": "https://localhost:{app_port}/",
      "Timeout": "00:01:00"
    },
    "SecurityConfig.Tests.Services": {
      "Uri": "https://localhost:{app_port}/",
      "Timeout": "00:01:00"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": {
      "0": {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Category:0} - {Message}{NewLine:1}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    }
  }
}