<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled"
                   Class="my-2 mr-2"
                   Color="Color"
                   OnClick="() => Submit()">
            <MudText>Submit</MudText>
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   Class="my-2 mr-2"
                   Color="Color.Default"
                   OnClick="() => Cancel()">
            <MudText>Cancel</MudText>
        </MudButton>
    </DialogActions>
</MudDialog>
