{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "IdentityServer4_CoHosted_client",
        "ClientName": "IdentityServer4_CoHosted Client",
        "RequireClientSecret": false,
        "AllowedGrantTypes": [
          "password"
        ],
        "AllowedScopes": [
          "api",
          "roles",
          "openid",
          "profile",
          "email"
        ],
        "RequirePkce": false,
        "AllowAccessTokensViaBrowser": false,
        "PostLogoutRedirectUris": [],
        "AllowPlainTextPkce": false
      }
    ],
    "ApiScopes": [
      {
        "Name": "api",
        "UserClaims": null
      },
      {
        "Name": "roles",
        "UserClaims": [
          "role"
        ]
      }
    ],
    "ApiResources": [
      {
        "Name": "api",
        "Scopes": [
          "api",
          "roles"
        ]
      }
    ],
    "IdentityResources": [
      {
        "Name": "openid"
      },
      {
        "Name": "profile"
      },
      {
        "Name": "email"
      }
    ]
  },
  "UseInMemoryDatabase": "true",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Initial Catalog=IdentityServer4_CoHosted;Integrated Security=true;MultipleActiveResultSets=True"
  }
}