<!DOCTYPE html>
<html lang="en">

    @Intent.Merge    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <base href="/" />
        <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
        <link rel="stylesheet" href="app.css" />
        <link rel="stylesheet" href="BlazorNoMudBlazor.Api.styles.css" />
        <link rel="icon" type="image/png" href="favicon.png" />
        <HeadOutlet @rendermode="GetRenderModeForPage()" />
    </head>

    <body>
        <Routes @rendermode="GetRenderModeForPage()" />
        <script src="_framework/blazor.web.js"></script>
    </body>

</html>
@code {

    [CascadingParameter]
    public HttpContext HttpContext { get; set; } = default!;

    public IComponentRenderMode? GetRenderModeForPage()
    {
        if (HttpContext.Request.Path.StartsWithSegments("/Account"))
        {
            return null;
        }
        return new InteractiveServerRenderMode(prerender: false);
    }
}