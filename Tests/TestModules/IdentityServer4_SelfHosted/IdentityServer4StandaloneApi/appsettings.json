{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CertificateOptions": {
    "Store": {
      "FindType": "FindBySubjectName",
      "FindValue": "localhost",
      "StoreName": "My",
      "StoreLocation": "LocalMachine"
    }
  },
  "IdentityServer": {
    "Clients": [
      {
        "Enabled": true,
        "ClientId": "IdentityServer4_SelfHosted_client",
        "ClientName": "IdentityServer4_SelfHosted Client",
        "RequireClientSecret": false,
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "AllowedScopes": [
          "api",
          "roles",
          "openid",
          "profile",
          "email"
        ],
        "RequirePkce": true,
        "AllowAccessTokensViaBrowser": true,
        "RedirectUris": [
          "https://localhost/oauth2-redirect.html"
        ],
        "PostLogoutRedirectUris": [],
        "AllowPlainTextPkce": false
      }
    ],
    "ApiScopes": [
      {
        "Name": "api",
        "UserClaims": null
      },
      {
        "Name": "roles",
        "UserClaims": [
          "role"
        ]
      }
    ],
    "ApiResources": [
      {
        "Name": "api",
        "Scopes": [
          "api",
          "roles"
        ]
      }
    ],
    "IdentityResources": [
      {
        "Name": "openid"
      },
      {
        "Name": "profile"
      },
      {
        "Name": "email"
      }
    ]
  }
}