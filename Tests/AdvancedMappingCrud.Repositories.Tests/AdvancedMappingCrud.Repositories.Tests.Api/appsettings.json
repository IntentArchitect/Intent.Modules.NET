{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security.Bearer": {
    "Authority": "https://localhost:{sts_port}",
    "Audience": "api"
  },
  "MassTransit": {
    "RetryInterval": {
      "RetryCount": 10,
      "Interval": "00:00:05"
    }
  },
  "IdentityClients": {
    "default": {
      "Address": "https://localhost:{sts_port}/connect/token",
      "ClientId": "clientId",
      "ClientSecret": "secret",
      "Scope": "api"
    }
  },
  "HttpClients": {
    "CustomersServiceProxy": {
      "Uri": "https://localhost:43123/",
      "IdentityClientKey": "default",
      "Timeout": "00:01:00"
    },
    "ProductServiceProxy": {
      "Uri": "https://localhost:43123/",
      "IdentityClientKey": "default",
      "Timeout": "00:01:00"
    },
    "FileUploadsService": {
      "Uri": "https://localhost:44386/",
      "IdentityClientKey": "default",
      "Timeout": "00:01:00"
    },
    "FileUploadsServiceProxy": {
      "Uri": "https://localhost:44386/",
      "IdentityClientKey": "default",
      "Timeout": "00:01:00"
    }
  }
}