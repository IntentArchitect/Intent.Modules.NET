{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security.Bearer": {
    "Authority": "https://localhost:{sts_port}",
    "Audience": "api"
  },
  "QueueStorage": {
    "DefaultEndpoint": "UseDevelopmentStorage=true",
    "QueueTypeMap": {
      "CompositeMessageBus.Eventing.Messages.MsgQStorageEvent": "compositemessagebus-eventing-messages-msgqstorage"
    },
    "Queues": {
      "compositemessagebus-eventing-messages-msgqstorage": {
        "Endpoint": null,
        "CreateQueue": false
      }
    }
  },
  "Kafka": {
    "SchemaRegistryConfig": {
      "Url": "http://localhost:8081",
      "BasicAuthUserInfo": "key:secret"
    },
    "DefaultConsumerConfig": {
      "GroupId": "Intent.Modules.NET.Tests",
      "AutoOffsetReset": "Earliest",
      "BootstrapServers": "localhost:9092"
    },
    "DefaultProducerConfig": {
      "BootstrapServers": "localhost:9092",
      "ClientId": "CompositeMessageBus"
    },
    "MessageTypes": {
      "CompositeMessageBus.Eventing.Messages.MsgKafkaEvent": {
        "Topic": "CompositeMessageBus.Eventing.Messages.MsgKafka"
      }
    }
  },
  "Solace": {
    "Host": "tcp://localhost:55555",
    "VPNName": "default",
    "UserName": "admin",
    "Password": "admin",
    "Application": "CompositeMessageBus"
  },
  "DaprSidekick": {
    "Sidecar": {
      "AppId": "composite-message-bus",
      "ComponentsDirectory": "../dapr/components",
      "ConfigFile": "../dapr/config.yaml"
    }
  },
  "CqrsSettings": {
    "LogRequestPayload": true
  },
  "AzureServiceBus": {
    "ConnectionString": "",
    "MsgAzSrvBus": "msg-az-srv-bus"
  },
  "MassTransit": {
    "RetryInterval": {
      "RetryCount": 10,
      "Interval": "00:00:05"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Category:0} - {Message}{NewLine:1}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "EventGrid": {
    "Topics": {
      "MsgAzEvtGrid": {
        "Source": "msg-az-evt-grid",
        "Key": "",
        "Endpoint": ""
      }
    }
  }
}