<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Intent.Modules.Application.Dtos" Version="3.3.1" />
    <PackageReference Include="Intent.Modules.Common" Version="3.3.6" />
    <PackageReference Include="Intent.Modules.Common.CSharp" Version="3.3.12" />
    <PackageReference Include="Intent.Modules.Modelers.Domain" Version="3.3.0" />
    <PackageReference Include="Intent.Modules.Modelers.Services" Version="3.3.1" />
    <PackageReference Include="Intent.Packager" Version="3.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Intent.RoslynWeaver.Attributes" Version="1.1.3" />
    <PackageReference Include="Intent.SoftwareFactory.SDK" Version="3.3.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Templates\DTOValidator\DTOValidatorTemplate.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>DTOValidatorTemplate.cs</LastGenOutput>
    </None>
    <None Update="Templates\ValidationException\ValidationExceptionTemplate.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>ValidationExceptionTemplate.cs</LastGenOutput>
    </None>
    <None Update="Templates\ValidationHandler\ValidationHandlerTemplate.tt">
      <Generator>TextTemplatingFilePreprocessor</Generator>
      <LastGenOutput>ValidationHandlerTemplate.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Templates\DTOValidator\DTOValidatorTemplate.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>DTOValidatorTemplate.tt</DependentUpon>
    </Compile>
    <Compile Update="Templates\ValidationException\ValidationExceptionTemplate.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ValidationExceptionTemplate.tt</DependentUpon>
    </Compile>
    <Compile Update="Templates\ValidationHandler\ValidationHandlerTemplate.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ValidationHandlerTemplate.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Intent.Modules.AzureFunctions\Intent.Modules.AzureFunctions.csproj" />
  </ItemGroup>

</Project>