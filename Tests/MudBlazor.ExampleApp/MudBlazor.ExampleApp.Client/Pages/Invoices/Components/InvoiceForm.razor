@using MudBlazor.ExampleApp.Client.Common.Validation
@inject IValidatorProvider ValidatorProvider

@if (Model is not null) 
{
    <MudForm @ref="@_form"
             Model="Model"
             Validation="@(ValidatorProvider.GetValidationFunc<InvoiceModel>())">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText>@HeaderText</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12"
                             md="6"
                             xl="3">
                        <MudTextField @bind-Value="Model.InvoiceNo"
                                      Label="Invoice No"
                                      For="@(() => Model.InvoiceNo)" />
                    </MudItem>
                    <MudItem xs="12"
                             md="6"
                             xl="3">
                        <MudSelect @bind-Value="Model.CustomerId"
                                   Label="Customer"
                                   For="@(() => Model.CustomerId)">
                            @foreach (var item in CustomerOptions) 
                            {
                                <MudSelectItem T="Guid?"
                                               Value="item.Id">
                                    @item.Name
                                </MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="12"
                             md="6"
                             xl="3">
                        <MudDatePicker @bind-Date="Model.InvoiceDate"
                                       Label="Invoice Date"
                                       For="@(() => Model.InvoiceDate)" />
                    </MudItem>
                    <MudItem xs="12"
                             md="6"
                             xl="3">
                        <MudDatePicker @bind-Date="Model.DueDate"
                                       Label="Due Date"
                                       For="@(() => Model.DueDate)" />
                    </MudItem>
                    <MudItem xs="12">
                        @if (Model.OrderLines is not null) 
                        {
                            <MudTable T="InvoiceLineModel"
                                      Items="@Model.OrderLines"
                                      Hover="true">
                                <HeaderContent>
                                    <MudTh>Product</MudTh>
                                    <MudTh>Units</MudTh>
                                    <MudTh>Unit Price</MudTh>
                                    <MudTh>Discount</MudTh>
                                    <MudTh>Total</MudTh>
                                    <MudTh />
                                </HeaderContent>
                                <RowTemplate>
                                    <MudTd>
                                        <MudSelect @bind-Value="context.ProductId"
                                                   Label="Select">
                                            @foreach (var item in ProductOptions) 
                                            {
                                                <MudSelectItem T="Guid?"
                                                               Value="item.Id">
                                                    @item.Name
                                                </MudSelectItem>
                                            }
                                        </MudSelect>
                                    </MudTd>
                                    <MudTd>
                                        <MudTextField @bind-Value="context.Units"
                                                      Label="Units" />
                                    </MudTd>
                                    <MudTd>
                                        <MudTextField @bind-Value="context.UnitPrice"
                                                      Label="Price" />
                                    </MudTd>
                                    <MudTd>
                                        <MudTextField @bind-Value="context.Discount"
                                                      Label="Discount" />
                                    </MudTd>
                                    <MudTd>@(context.Units * context.UnitPrice)</MudTd>
                                    <MudTd>
                                        <MudIconButton Variant="Variant.Text"
                                                       Icon="@Icons.Material.Filled.Delete"
                                                       Class="m-0"
                                                       Color="Color.Error"
                                                       OnClick="() => OnDeleteLineClick(context)" />
                                    </MudTd>
                                </RowTemplate>
                            </MudTable>
                        }
                    </MudItem>
                </MudGrid>
                <MudButton Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.AddCircle"
                           Class="my-2 mr-2"
                           Color="Color.Secondary"
                           OnClick="() => AddLineClicked()">
                    <MudText>Add Line</MudText>
                </MudButton>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Save"
                           Class="my-2 mr-2"
                           Color="Color.Primary"
                           OnClick="() => OnSaveClicked()"
                           Disabled="@_onSaveClickedProcessing">
                    @if (_onSaveClickedProcessing) 
                    {
                        <MudProgressCircular Class="ms-n1"
                                             Size="Size.Small"
                                             Indeterminate="true" />
                    }
                    <MudText>Save</MudText>
                </MudButton>
                <MudButton Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Cancel"
                           Class="my-2 mr-2"
                           Color="Color.Default"
                           OnClick="() => OnCancelClicked()"
                           Disabled="@_onCancelClickedProcessing">
                    @if (_onCancelClickedProcessing) 
                    {
                        <MudProgressCircular Class="ms-n1"
                                             Size="Size.Small"
                                             Indeterminate="true" />
                    }
                    <MudText>Cancel</MudText>
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudForm>
}
