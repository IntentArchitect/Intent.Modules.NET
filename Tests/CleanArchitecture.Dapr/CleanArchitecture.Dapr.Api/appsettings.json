{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DaprSidekick": {
    "Sidecar": {
      "AppId": "clean-architecture-dapr",
      "ComponentsDirectory": "../dapr/components",
      "ConfigFile": "../dapr/config.yaml"
    }
  },
  "Security.Bearer": {
    "Authority": "https://localhost:{sts_port}",
    "Audience": "api"
  },
  "Dapr.Secrets": {
    "StoreName": "secret-store"
  }
}